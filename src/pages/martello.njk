        path_to_thumb= 'assets/images/Painting/Martello/Promenade_around_a_Martello_Tower_1997_Oil_and_Encaustic_90x90-thumb.jpg',
        alt= 'painting of Martello Tower surrounded by illustrations in the style of Eadweard Muybridge of a man walking'
        ) }}

        {{ artwork (
        artwork_title= 'Martello',
        path_to_image= 'assets/images/Painting/Martello/Martello.jpg',
        path_to_thumb= 'assets/images/Painting/Martello/Martello-thumb.jpg',
        alt= 'brightly coloured painting of a Martello Tower on a circular board'
        ) }}

        {{ artwork (
        artwork_title= 'Martello Tower on the Leas',
