{% block twitter_meta %}
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://johnhosking.com/">
    <meta property="twitter:title" content="John Hosking | Welcome - this is an online archive of work by artist John Hosking">
    <meta property="twitter:description" content="[a longer description, not as important as title, but should naturally include some keywords]">
    <meta property="twitter:image" content="https://for-the-whim.com/assets/images/Painting/Allotment/Life_&_Death_Time_&_Space_Diptych_90x180.jpg">
{% endblock %}

{% extends "layout.njk" %}

{% from "macros/_header-macro.njk" import title %}

{% block content %}

  {{ title (
  page_title= 'John Hosking'
  ) }}

  <main class="welcome">

    <div class="row row--pad">

      <div class="row__coltouching">

        <div class="span4-4 span6-3">
          <picture>
            <source 
                media="(max-width: 450px)"
                srcset="assets/images/Painting/Allotment/Life_&_Death-thumb.jpg">
            <img src="assets/images/Painting/Allotment/Life_&_Death.jpg" alt="allotment diptych panel 1">
          </picture>
        </div>

        <div class="span4-4 span6-3">
          <picture>
            <source 
                media="(max-width: 450px)"
                srcset="assets/images/Painting/Allotment/Time_&_Space-thumb.jpg">
            <img src="assets/images/Painting/Allotment/Time_&_Space.jpg" alt="allotment diptych panel 2">
          </picture>
        </div>

      </div><!-- .row__coltouching -->

    </div><!-- .row .row--pad -->

  </main><!-- .painting -->

{% endblock %}

