{% set body_id = "home" %}

{% block meta %}
    <title>John Hosking | Home - welcome to the work of artist John Hosking</title>
    <meta name="title" content="John Hosking | Home - welcome to the work of artist John Hosking">
    <meta name="description" content="This is an online archive of paintings and prints spanning five decades by the Kent artist John Hosking">
{% endblock %}

{% extends "layout.njk" %}

{% from "macros/_header-macro.njk" import title %}

{% block content %}

  {{ title (
  page_title= 'John Hosking'
  ) }}

  <main class="welcome">

    <div class="row row--pad">

      <div class="row__coltouching">

        <div class="span4-4 span6-3">
          <picture>
            <source 
                media="(max-width: 450px)"
                srcset="assets/images/Painting/Allotment/Life_&_Death-thumb.jpg">
            <img src="assets/images/Painting/Allotment/Life_&_Death.jpg" alt="allotment diptych panel 1">
          </picture>
        </div>

        <div class="span4-4 span6-3">
          <picture>
            <source 
                media="(max-width: 450px)"
                srcset="assets/images/Painting/Allotment/Time_&_Space-thumb.jpg">
            <img src="assets/images/Painting/Allotment/Time_&_Space.jpg" alt="allotment diptych panel 2">
          </picture>
        </div>

      </div><!-- .row__coltouching -->

    </div><!-- .row .row--pad -->

  </main><!-- .painting -->

{% endblock %}

{% block js %}
{% endblock %}