    <meta name="description" content="[a longer description, not as important as title, but should naturally include some keywords]">
{% endblock %}

{% block og_meta %}
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://johnhosking.com/">
    <meta property="og:title" content="John Hosking | Welcome - this is an online archive of work by artist John Hosking">
    <meta property="og:description" content="[a longer description, not as important as title, but should naturally include some keywords]">
    <meta property="og:image" content="https://for-the-whim.com/assets/images/Painting/Allotment/Life_&_Death_Time_&_Space_Diptych_90x180.jpg">
    <meta property="og:image:height" content="800">
    <meta property="og:image:width" content="800">
